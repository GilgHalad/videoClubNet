{% extends 'base.html.twig' %}

{% block title %}List Users!{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}  

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last name</th>
                <th>Last name 2</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
        {% for list in lists %}
            <tr>
                <td>{{list.name}}</td>
                <td>{{list.lastName1}}</td>
                <td>{{list.lastName2}}</td>
                <td>{{list.phone}}</td>
                <td>{{list.email}}</td>
                <td> 
                    {% for listRoles in list.roles %}
                        {{listRoles|slice(5)}}           
                    {% endfor %}
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no users found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% else %}
    Permission denied.
{% endif %}
{% endblock %}
